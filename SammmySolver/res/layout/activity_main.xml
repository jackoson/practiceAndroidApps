<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >

    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="fill_parent">
    	
	        <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	     >
	     
			    
			
			    <TextView
			        android:id="@+id/input"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:textSize="30dp"   
			        >
			
			    </TextView>
			
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    <Button
				        android:id="@+id/b1"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="1" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b2"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="2" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b3"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="3"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    
				   <Button
				        android:id="@+id/ba"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="+" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
				   <Button
				        android:id="@+id/bm"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="-" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
			    
			    </LinearLayout>
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
				    
				    <Button
				        android:id="@+id/b4"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="4" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b5"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="5" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b6"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="6"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/be"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="=" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bp"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="." 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
			    
			    </LinearLayout>
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    <Button
				        android:id="@+id/b7"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="7" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b8"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="8" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b9"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="9"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bx"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="x" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bxs"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="x&#178;" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
			    
			    </LinearLayout>
			    
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="10"
			    
			     >
			    
				    <Button
				        android:id="@+id/b0"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="0" 
				        android:textSize="30dp"
				        android:layout_weight="2.68"
				        />
				    
				    
				    <Button
				        android:id="@+id/bb"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="BS" 
				        android:textSize="30dp"
				        android:layout_weight="2.68"
				        />
				    
			    
				    <Button
				        android:id="@+id/bclear"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="Clear" 
				        android:textSize="30dp"
				        android:layout_weight="1.96"
				        />
				    
				    
				    <Button
				        android:id="@+id/bs"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="Go" 
				        android:textSize="30dp"
				        android:layout_weight="2.68"
				        />
				    
			    </LinearLayout>
			    
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="3"
			    
			     >
				    
				    
				    
				    <Button
				        android:id="@+id/bsin"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="sinx" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bcos"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="cosx"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    
				   <Button
				        android:id="@+id/btan"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="tanx"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
			    
			    </LinearLayout>
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="3"
			    
			     >
				    
				    <Button
				        android:id="@+id/bsinsq"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="sin&#178;x" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bcossq"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="cos&#178;x" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    
				    
				   <Button
				        android:id="@+id/btansq"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="tan&#178;x" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
			    
			    </LinearLayout>
			    
			    
			    
			    
			    <TextView
			        android:id="@+id/output"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Nothing Yet"
			        android:textSize="30dp"
			        />
	    
	    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    









