<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >

    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="fill_parent">
    	
	        <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	     >
	     
			    <TextView
			        android:id="@+id/input"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:hint="Type equation"
			        android:textSize="30dp" >
			
			    </TextView>
			    
			   
			
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    <Button
				        android:id="@+id/b1"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="1" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b2"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="2" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b3"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="3"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    
				   <Button
				        android:id="@+id/ba"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="+" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
				   <Button
				        android:id="@+id/bm"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="-" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
			    
			    </LinearLayout>
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
				    
				    <Button
				        android:id="@+id/b4"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="4" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b5"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="5" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b6"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="6"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				   <Button
				        android:id="@+id/bt"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="*" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bd"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="/" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
			    
			    </LinearLayout>
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    <Button
				        android:id="@+id/b7"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="7" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b8"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="8" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/b9"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="9"
				        android:textSize="30dp" 
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bx"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="x" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bxs"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=" ^" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				   
			    
			    </LinearLayout>
			    
			    
			    
			    
			    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    
				    
				    
				    <Button
				        android:id="@+id/bo"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="(" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
			    
				    <Button
				        android:id="@+id/b0"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="0" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bc"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=")" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    <Button
				        android:id="@+id/bpo"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="." 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
				    
				    <Button
				        android:id="@+id/bb"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="BS" 
				        android:textSize="30dp"
				        android:layout_weight="1"
				        />
				    
			    </LinearLayout>
			    
			    
			    
			    
			     <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="5"
			    
			     >
			    
				    
				    <Button
				        android:id="@+id/bf" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="!" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />

				    
				    
				    <Button
				        android:id="@+id/be" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="e" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />
				    
			    <Button
				        android:id="@+id/bncr" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="nCr" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />
				    
				   <Button
				        android:id="@+id/bpi" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="&#960;" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />
				   
				   <Button
				        android:id="@+id/bmd" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="(-)" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />
				    
				    
			    </LinearLayout>
			    
			    
			     <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="4"
			    
			     >
			    
				    
				    <Button
				        android:id="@+id/bsin" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="sin(" 
				        android:textSize="20dp"
				        android:layout_weight="1"
				        />

				    
				    
				    <Button
				        android:id="@+id/bcos" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="cos(" 
				        android:textSize="20dp"
				        android:layout_weight="1"
				        />
				    
			     <Button
				        android:id="@+id/btan"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="tan(" 
				        android:textSize="20dp"
				        android:layout_weight="1"
				        />

			      <Button
				        android:id="@+id/bn"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="Next" 
				        android:textSize="20dp"
				        android:layout_weight="1"
				        />
			     
			   
				    
			    </LinearLayout>
			    
			     
			     
			      <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" 
			    android:weightSum="2"
			    
			     >
			    
				    
				    <Spinner
			        android:id="@+id/spinner1"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"		
			        android:textSize="25dp"			        
			        android:entries="@array/modes" />
				   
				   
				   <Button
				        android:id="@+id/bre" 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="Restart" 
				        android:textSize="25dp"
				        android:layout_weight="1"
				        />
				    
				    
			    </LinearLayout>
			     
			     
			     
			    
			    <TextView
			        android:id="@+id/output"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Nothing Yet"
			        android:textSize="30dp"
			        />
	    
	    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    









